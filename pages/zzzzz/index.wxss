Page {
  background-color: #f1f1f1;
}

.header {
  position: absolute;
}

.navigation-title {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}

.navigation-title text {
  font-size: 28rpx;
}

.navigation-title .selected-title {
  color: red;
  position: relative;
}
.navigation-title .selected-title::before {
  content: "";
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  margin-left: -25rpx;
  width: 50rpx;
  height: 4rpx;
  background-color: red;
}
.slideshow image {
  width: 100%;
  height: 600rpx;
}

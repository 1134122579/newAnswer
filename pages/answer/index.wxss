page {
  background: #ff9933;
}

.navber {
  background: #fff;
  height: 80rpx;
  margin-top: 60rpx;
  padding: 0 20px;
  font-size: 34rpx;
}
.wdithIcon {
  width: 150rpx;
  display: inline-block;
}
.titleNav {
  flex-shrink: 0;
  text-align: center;
}
.lookImage {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 20;
  background: #ccaf93;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 1;
  filter: Alpha(opacity=100);
  transition: opacity 2s;
}

.nolookimage {
  opacity: 0;
  filter: Alpha(opacity=0);
  display: none;
}

.qgimage {
  width: 100%;
}

.content {
  display: block;
  border-radius: 10rpx;
  margin: 40rpx;
  padding: 20rpx;
  background: #fff;
}

.centered {
  width: 50%;
  background: #fff;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
}

.className {
  font-size: 40rpx;
  font-weight: 800;
  border-left: 10rpx solid #ff9933;
  padding-left: 40rpx;
  margin: 20rpx 0;
}

.problem_title {
  display: inline-block;
  width: 100%;
  font-size: 36rpx;
  color: #333;
  padding: 20rpx 0;
}

.radiolist {
  padding: 20rpx;
}

.radio {
  background: #f2f2f2;
  padding: 20rpx;
  /* width: 80%; */
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.sureradio {
  background: #00b050;
  color: #fff;
}
.noRadio {
  background: #ff0000;
  color: #fff;
}

/* 答题错误的弹窗 */
.noProblem {
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  display: flex;
  z-index: 100;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.4);
}
.noProblem_content {
  width: 80%;
  background: #fafafa;
  padding: 20rpx 0;
  border-radius: 20rpx;
  padding-bottom: 60rpx;
}

.noProblem_img {
  padding: 10rpx 0;
  width: 80%;
}
.overText{
  font-size: 46rpx;
  letter-spacing:10rpx;
  font-weight: 600;
}
.noProblem_button {
  display: flex;
  justify-content: center;
  align-items: center;
}
.flexclunm {
  flex-direction: column;
}
.noProblem_p {
  display: inline-block;
  font-size: 26rpx;
  width: 100%;
  text-align: center;
  padding: 30rpx 0;
  padding-top: 50rpx;
}

.tag_text {
  color: #cdbbaa;
}
.nolook {
  display: none;
}
.button_round {
  border-radius: 40rpx;
  overflow: hidden;
}
.headerPostion{
  position: relative;
}
.NextNum{
  position: absolute;
  left: 0;
  right: 0;
  top: -50rpx;
  margin:0 auto;
  width: 100rpx;
  height: 100rpx;
  background: rgb(61, 56, 56);
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height:100rpx ;
  font-size: 50rpx;
}
.ok{
  background: #34E073;
}
.no{
  background: #ff0000;
}
.butonStyle .buttonArr{
  letter-spacing: 10rpx;
  text-align: center;
}
.noProblem_button1{
  flex-shrink: 0;
  width: 60%;
}
.noProblem_button .buttonT{
  border-radius: 20rpx;
}
